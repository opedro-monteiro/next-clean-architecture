generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String
  category    Category
  size        Size
  color       Color
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  T_SHIRT
  JEANS
  SHIRTS
  SHORTS
  SWEATER
  CAP
}

enum Size {
  S
  M
  L
  XL
  XXL
 XXXL
}

enum Color {
  GREEN
  RED
  YELLOW
  ORANGE
  CYAN
  BLUE
  PURPLE
  PINK
  WHITE
  BLACK
}

